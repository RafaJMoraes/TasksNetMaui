<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tasks.Views.ListPage"
             Title="ListPage">
    
    <ContentPage.ToolbarItems >
        <ToolbarItem Clicked="OnDetails" Text="+" IconImageSource="plus.jpeg" Order="Default"/>
    </ContentPage.ToolbarItems>

    <ListView x:Name="taskListView">
        <ListView.ItemTemplate>
            <DataTemplate >
                <ViewCell>
                    <Frame BorderColor="Gray" CornerRadius="8">
                        <StackLayout Padding="20" Spacing="10">
                            <!-- Descrição -->
                            <Label Text="{Binding Descricao}" FontSize="18" />

                            <!-- Ícone para indicar a conclusão -->
                            <Image Source="{Binding ConcluidaIcone}" HeightRequest="24" IsVisible="{Binding Concluida}" />

                            <!-- Faixa de prioridade -->
                            <BoxView BackgroundColor="{Binding PrioridadeCor}" HeightRequest="8" />
                        </StackLayout>
                    </Frame>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>